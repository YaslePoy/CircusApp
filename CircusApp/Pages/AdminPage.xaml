<Page x:Class="CircusApp.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CircusApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150">
            </ColumnDefinition>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Border Margin="5" BorderThickness="1" BorderBrush="Black" PreviewMouseDown="UserRegister">
                <TextBlock Margin="5">Персонал</TextBlock>
            </Border>
            <Border Margin="5" BorderThickness="1" BorderBrush="Black" PreviewMouseDown="UserRegisterTalant">
                <TextBlock Margin="5">Навыки</TextBlock>
            </Border>
            <Border Margin="5" BorderThickness="1" BorderBrush="Black" PreviewMouseDown="ShowTicketPage">
                <TextBlock Margin="5">Билеты</TextBlock>
            </Border>
        </StackPanel>
        <Frame Grid.Column="1" x:Name="AdminNav" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Page>
