<Page x:Class="CircusApp.Pages.EventsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CircusApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EventsPage">
    <StackPanel Margin="5" HorizontalAlignment="Left" Width="500">
        <TextBlock Margin="5" Text="Название"></TextBlock>
        <TextBox Margin="5" Name="nameTB"></TextBox>
        <TextBlock Margin="5" Text="Описание"></TextBlock>
        <TextBox Margin="5" Name="descriprionTB" Height="70"></TextBox>
        <TextBlock Margin="5" Text="Адрес"></TextBlock>
        <TextBox Margin="5" Name="addressTB"></TextBox>
        <TextBlock Margin="5" Text="Дата"></TextBlock>
        <DatePicker  Margin="5" Width="200" Name="timestampDP"></DatePicker>
        <TextBlock Margin="5" Text="Залл"></TextBlock>
        <ComboBox Margin="5" Name="hallIdTB" SelectedIndex="0">
            <ComboBox.Items>
                <ComboBoxItem>Основной</ComboBoxItem>
                <ComboBoxItem>Мини</ComboBoxItem>
            </ComboBox.Items>
        </ComboBox>
        <Button Margin="5" Click="Button_Click">Создать</Button>
    </StackPanel>
</Page>
